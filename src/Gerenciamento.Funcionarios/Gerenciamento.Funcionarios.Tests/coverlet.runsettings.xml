<?xml version="1.0" encoding="utf-8"?>
<RunSettings>
  <DataCollectionRunSettings>
    <DataCollectors>
      <DataCollector friendlyName="XPlat code coverage">
        <Configuration>
          <Format>cobertura</Format>
          <Threshold>1</Threshold>
          <ThresholdType>line,branch,method</ThresholdType>
          <Include>[Gerenciamento.Funcionarios.Api]*</Include>
          <ExcludeByFile>
            **/Gerenciamento.Funcionarios.Dominio/*.cs,
            **/Gerenciamento.Funcionarios.Data/*.cs,
            **/Gerenciamento.Funcionarios.Aplicacao/*.cs,
            **/Gerenciamento.Funcionarios.CrossCutting/*.cs
          </ExcludeByFile>
          <Exclude>[xunit.*]*</Exclude>
          <MergeWith>./coverage/coverage.json</MergeWith>
          <UseSourceLink>true</UseSourceLink>
        </Configuration>
      </DataCollector>
    </DataCollectors>
  </DataCollectionRunSettings>
  
  <RunConfiguration>
    <ResultsDirectory>./TestResults/</ResultsDirectory>
    <CollectSourceInformation>true</CollectSourceInformation>
  </RunConfiguration>
</RunSettings>