<?xml version="1.0" encoding="utf-8" ?>
<CoverletRunSettings>
  <!-- Define a cobertura mínima como 1% (apenas para o projeto Api) -->
  <Threshold>1</Threshold>
  <ThresholdType>line,branch,method</ThresholdType>

  <!-- Inclui APENAS o projeto Api na verificação -->
  <IncludeFilters>[*Gerenciamento.Funcionarios.Api*]</IncludeFilters>

  <!-- Ignora todos os outros projetos -->
  <ExcludeFilters>
    [*Gerenciamento.Funcionarios.Dominio*],
    [*Gerenciamento.Funcionarios.Data*],
    [*Gerenciamento.Funcionarios.Aplicacao*],
    [*Gerenciamento.Funcionarios.CrossCutting*]
  </ExcludeFilters>
</CoverletRunSettings>