<?xml version="1.0" encoding="utf-8" ?>
<RunSettings>
  <DataCollectionRunSettings>
    <DataCollectors>
      <DataCollector friendlyName="XPlat code coverage">
        <Configuration>
          <Format>cobertura</Format>
          <Include>
			[Gerenciamento.Funcionarios.Api]*,
			[Gerenciamento.Funcionarios.Aplicacao]*,
			[Gerenciamento.Funcionarios.Dominio]*,
			[Gerenciamento.Funcionarios.Data]*,
		  </Include>
          <Exclude>
			[Gerenciamento.Funcionarios.Tests]*,
			[Gerenciamento.Funcionarios.CrossCutting]*,
			[*.Test]*,
            [xunit.*]*,
            [Moq]*,
            [Coverlet.*]*
		  </Exclude>
        </Configuration>
      </DataCollector>
    </DataCollectors>
  </DataCollectionRunSettings>
</RunSettings>